{% extends "_layouts/main" %}

{% block content %}

	<div class="hero">
		<img class="logo" src="/images/logo-sign-small.png" alt="">
		<div class="hero-image hero-band" style="background-image: url({{ entry.hero.count ? entry.hero.one().url : '/images/corkscrew1.jpg' }});"></div>
		<h1>{{ entry.title }}</h1>
	</div>

	<div id="shows" class="section-style1 pt-4 pb-4">
		<div class="container">
	
				<div class="show pt-5">
					<div class="row">
						<div class="col-md-4 col-lg-3 text-center">
							<div class="date-box">
								<div class="month">{{ entry.showDate | date('mm Y') }}</div>
								<div class="date">{{ entry.showDate | date('d') }}</div>
								<div class="weekday">{{ entry.showDate | date('l') }} @ {{ entry.showDate | date('h:ia') }}</div>
								{% if entry.facebookEventLink | length %}
									<a href="{{ entry.facebookEventLink }}" target="_blank" class="facebook-event-link"><i class="fab fa-facebook-square"></i></a>
								{% endif %}
							</div>
						</div>
						<div class="col-md-8 col-lg-9">
							{% if entry.venueName | length %}
								<a class="venue" target="_blank" href="https://www.google.com/maps/place/{{ entry.venueAddress }}">
									<i class="fas fa-map-marker-alt"></i> 
									{{ entry.venueName }}
								</a>
							{% endif %}
							{% if entry.showLink | length %}
								<a href="{{ entry.showLink }}" target="_blank" class="show-link"><h5>{{ entry.title }}</h5></a>
							{% else %}
								<h5>{{ entry.title }}</h5>
							{% endif %}
							<p>{{ entry.showDetails }}</p>
						</div>
					</div>
				</div>
		</div>

	</div>


	

{% endblock %}