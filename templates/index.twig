{% extends "_layouts/main" %}

{% set setlist90s = craft.categories.group('songs').slug('setlist90s') %}
{% set setlist80s = craft.categories.group('songs').slug('setlist80s') %}
{% set members = craft.entries.section('members').orderBy('postDate') %}
{% set shows = craft.entries().section('shows').orderBy('showDate asc').all() %}
{% set videos = craft.entries().section('videos').all() %}

{% block header %}
	<header>
        <div id="main-menu" class="container">
            {# <a href="#" class="d-none d-sm-inline jump-link"><h1>{{ siteName }}</h1></a> #}
            <a href="#" class="jump-link">HOME</a>
            <a href="#about" class="jump-link">ABOUT</a>
            <a href="#shows" class="jump-link">SHOWS</a>
            <a href="#members" class="jump-link">BAND</a>
            <a href="#music" class="jump-link">MUSIC</a>
            <a href="#contact" class="jump-link">CONTACT</a>
            <a href="https://www.youtube.com/channel/UCiT2sGOUicZ7FbLLcTRvXjg/" target="_blank"><i class="fab fa-youtube"></i></a>
            <a href="https://www.facebook.com/exiteightyfive" target="_blank"><i class="fab fa-facebook"></i></a>
        </div>
    </header>
{% endblock %}

{% block content %}

	<div class="hero">
		{# <h1>{{ siteName | replace(" ", "<br>") | raw }}</h1> #}
		{# <h1>{{ siteName }}</h1> #}
		<img class="logo" src="/images/logo-sign-small.png" alt="">
		<div class="hero-image"></div>
		
		{% if entry.newsHtml | length %}
			<div class="news-ticker">
				<div class="container">
					<div class="news-ticker-content">
						{{ entry.newsHtml | raw }}
					</div>
				</div>
			</div>
		{% endif %}

	</div>

	<div id="about" class="container">
		<div class="band-bio">
			<h1>{{ entry.bandHeader }}</h1>
			<p>{{ entry.bandBio }}</p>
		</div>
		{% set vidlen = videos | length %}
		{% if vidlen > 0 %}
			<div class="row">
				{% for video in videos %}
					<div class="col-12 col-lg-8 {% if vidlen > 1 %}col-xl-6 {% endif %}m-auto">
						<div class="mt-5">
							<div class="embed-responsive embed-responsive-16by9">
							  {{ video.youtubeEmbedCode | raw }}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>

	<div id="shows" class="section-style1">
		
		<div class="container">
			<h2 class="text-center">{{ events.showsTitle }}</h2>
			<p class="text-center mb-5">{{ events.eventText | replace({'contact us': '<a  href="#contact">contact us soon</a>'}) | raw }}</p>
			{# {% for show in shows  if show.showDate >= now %} #}
			{% for show in shows %}
				<div class="show">
					<div class="row">
						<div class="col-md-4 col-lg-3 text-center">
							<div class="date-box">
								<div class="month">{{ show.showDate | date('mm Y') }}</div>
								<div class="date">{{ show.showDate | date('d') }}</div>
								<div class="weekday">{{ show.showDate | date('l') }} @ {{ show.showDate | date('h:ia') }}</div>
							</div>
						</div>
						<div class="col-md-8 col-lg-9">
							{% if show.venueName | length %}
								<a class="venue" target="_blank" href="https://www.google.com/maps/place/{{ show.venueAddress }}">
									<i class="fas fa-map-marker-alt"></i> 
									{{ show.venueName }}
								</a>
							{% endif %}
							{% if show.showLink | length %}
								<a href="{{ show.showLink }}" target="_blank" class="show-link"><h5>{{ show.title }}</h5></a>
							{% else %}
								<h5>{{ show.title }}</h5>
							{% endif %}
							<p>{{ show.showDetails }}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div id="members" class="container">

		<h2>{{ entry.membersHeader }}</h2>

		{% if members.count() > 0 %}
			<div class="row">
				{% for member in members.all() %}
					<div class="col-md-6 m-auto">
						<div class="band-member">
							<div class="band-member-info">
								<h5>{{ member.memberName }}</h5>
								<h6>{{ member.instruments }}</h6>
							</div>
							<div class="band-member-cover"></div>
							<div class="band-member-image" style="background-image:url({{ member.profilePicture.one().url }})"></div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}

	</div>

	<div class="section-style1">

		<div id="music" class="container">

			<h2>{{ entry.songsHeader }}</h2>
			{% if entry.songsText %}
				<p>{{ entry.songsText }}</p>
			{% endif %}

			<div class="mt-5 mb-5">
				<div class="row">
					<div class="col-12 col-lg-8 col-xl-12 m-auto">

						<iframe width="100%" height="200" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/582457401&color=%232bb0ea&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=true&visual=false"></iframe>

						{% set vidlen = videos | length %}
						{% if vidlen > 0 %}
							<div class="row">
								{% for video in videos %}
									<div class="col-12 col-lg-8 {% if vidlen > 1 %}col-xl-6 {% endif %}m-auto">
										<div class="mt-5">
											<div class="embed-responsive embed-responsive-16by9">
											  {{ video.youtubeEmbedCode | raw }}
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
						{% endif %}

					</div>
				</div>
			</div>

			<h5><a href="https://open.spotify.com/user/jacksutherl/playlist/5nb0dSo3jylpT5r7v9m1C1?si=eaAwGGeZTvmgj1UpjyEAVQ" target="_blank">Spotify Playlist <i class="fas fa-volume-down"></i></a></h5>

			<div class="row">
				<div class="col-sm-6">
					<h5>{{ setlist90s.one().title }}</h5>
					{% if setlist90s.count() > 0 %}
						<ul>
							{% for song in setlist90s.one().children.all() %}
								<li>{{ song.title }} <small><i>({{ song.songArtist }})</i></small></li>
							{% endfor %}
						</ul>
					{% endif %}
				</div>
				<div class="col-sm-6">
					<h5>{{ setlist80s.one().title }}</h5>
					{% if setlist80s.count() > 0 %}
						<ul>
							{% for song in setlist80s.one().children.all() %}
								<li>{{ song.title }} <small><i>({{ song.songArtist }})</i></small></li>
							{% endfor %}
						</ul>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	

{% endblock %}