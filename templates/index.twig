{% extends "_layouts/main" %}

{% set setlist90s = craft.categories.group('songs').slug('setlist90s') %}
{% set setlist80s = craft.categories.group('songs').slug('setlist80s') %}
{% set members = craft.entries.section('members').orderBy('postDate') %}
{# {% set shows = craft.entries().section('shows').orderBy('showDate asc').all() %} #}
{# {% set shows = craft.entries().section('shows').showDate('>=' ~ now|atom).orderBy('showDate asc').all() %} #}
{# {% set showCount = craft.entries().section('shows').count() %}
{% set numberOfShows = 10 %}
{% set shows = craft.entries().section('shows').orderBy('showDate asc').offset(showCount - numberOfShows).limit(numberOfShows).all() %} #}
{% set shows = craft.entries().section('shows').showDate('>=' ~ date("2020-01-01")|atom).orderBy('showDate asc').all() %}

{# {% set featuredVideos = craft.entries().section('videos').isFeatured('1') %}
{% set videos = craft.entries().section('videos').all() %} #}
{% set videos = craft.categories.group('videos') %}
{% set featuredVideos = craft.categories.group('videos').isFeatured('1') %}

{# {% block header %}
	
{% endblock %} #}

{% block content %}
	
	{# <img class="big-logo" src="/images/logo-sign-small.png" alt=""> #}

	<div class="sneaky hero{% if entry.heroAnimated %} animated{% endif %}{% if news.newsHtml | length %} has-alert{% endif %}">
		<img class="logo" src="/images/logo-sign-small.png" alt="">
		{# <div class="hero-image{% if entry.heroGrayscale %} hero-grayscale{% endif %}" style="background-image: url({{ entry.hero.one().url }});"></div> #}
		<div class="hero-image{% if entry.heroGrayscale %} hero-grayscale{% endif %}" style="background-image: url(https://exiteightyfive.com/files/generic/images/exit85-ipa2.jpg);;"></div>
	</div>

	<div id="about" class="container sneaky">
		<div class="band-bio">
			<h1>{{ entry.bandHeader }}</h1>
			<p>{{ entry.bandBio }}</p>
		</div>
		{% set vidlen = featuredVideos | length %}
		{% if vidlen > 0 %}
			<div class="row">
				{% for video in featuredVideos.all() %}
					<div class="col-12 col-lg-8 {% if vidlen > 1 %}col-xl-6 {% endif %}m-auto">
						<div class="mt-5">
							<div class="embed-responsive embed-responsive-16by9">
							  {{ video.youtubeEmbedCode | raw }}
							</div>
						</div>
						{% if video.description | length %}
							<div class="video-description">
								{{ video.description }}
							</div>
						{% endif %}
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>

	<div id="shows" class="section-style1 sneaky">
		
		<div class="container">
			<h2 class="text-left">{{ events.showsTitle }}</h2>
			<p class="text-left mb-5 mr-5">
				{{ events.eventText | replace({'contact us': '<a  href="#contact">contact us soon</a>'}) | raw }}
				<br><br>
				<a href="/calendar"><i class="fas fa-calendar-alt"></i> <span>View All Dates</span></a>
			</p>
			{% for show in shows %}
				<div class="show">
					<div class="row">
						<div class="col-md-4 col-lg-3 text-center">
							<div class="date-box">
								<div class="month">{{ show.showDate | date('mm Y') }}</div>
								<div class="date">{{ show.showDate | date('d') }}</div>
								<div class="weekday">{{ show.showDate | date('l') }} @ {{ show.showDate | date('h:ia') }}</div>
								{% if show.facebookEventLink | length %}
									<a href="{{ show.facebookEventLink }}" target="_blank" class="facebook-event-link"><i class="fab fa-facebook-square"></i></a>
								{% endif %}
							</div>
						</div>
						<div class="col-md-8 col-lg-9">
							{% if show.venueName | length %}
								<a class="venue" target="_blank" href="https://www.google.com/maps/search/{{ show.venueAddress }}">
									<i class="fas fa-map-marker-alt"></i> 
									{{ show.venueName }}
								</a>
							{% endif %}
							{% if show.showLink | length %}
								<a href="{{ show.showLink }}" target="_blank" class="show-link"><h5>{{ show.title }}</h5></a>
							{% else %}
								{# <h5>{{ show.title }}</h5> #}
								<a href="{{ show.url }}" class="show-link"><h5>{{ show.title }}</h5></a>
							{% endif %}
							<p>{{ show.showDetails }}</p>
						</div>
					</div>
				</div>
			{% endfor %}
			<a itemprop="url" href="/calendar"><i class="fas fa-calendar-alt"></i> <span itemprop="name">View Our Entire Calendar</span></a>
		</div>
	</div>

	<div id="members" class="container sneaky">

		<h2>{{ entry.membersHeader }}</h2>

		{% if members.count() > 0 %}
			<div class="row">
				{% for member in members.all() %}
					<div class="col-lg-6 m-auto">
						<div id="band-member-{{ member.slug }}" class="band-member">
							<div class="band-member-info">
								<h5>{{ member.memberName }}</h5>
								<h6>{{ member.instruments }}</h6>
								{% if member.memberLink | length %}
									<h6><a href="{{ member.memberLink }}" target="_blank">{{ member.memberLink }}</a></h6>
								{% endif %}
								{% if member.memberBio | length %}
									<div class="band-member-bio">
										{{ member.memberBio }}
									</div>
								{% endif %}
							</div>
							<div class="band-member-cover"></div>
							<div class="band-member-image" style="background-image:url({{ member.profilePicture.one().url }})"></div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}

	</div>

	<div class="section-style1 sneaky">

		<div id="music" class="container">

			<h2>{{ entry.songsHeader }}</h2>
			{% if entry.songsText %}
				<p>{{ entry.songsText }}</p>
			{% endif %}

			<div class="mt-5 mb-5">
				<div class="row">
					<div class="col-12 col-lg-8 col-xl-12 m-auto">

						{# <iframe width="100%" height="200" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/582457401&color=%232bb0ea&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=true&visual=false"></iframe> #}

						{% set vidlen = videos | length %}
						{% if vidlen > 0 %}
							<div class="row">
								{% for video in videos.all() %}
									<div class="col-12 col-lg-8 {% if vidlen > 1 %}col-xl-6 {% endif %}m-auto">
										<div class="mt-5">
											<div class="embed-responsive embed-responsive-16by9">
											  {{ video.youtubeEmbedCode | raw }}
											</div>
										</div>
										{% if video.description | length %}
											<div class="video-description">
												{{ video.description }}
											</div>
										{% endif %}
									</div>
								{% endfor %}
							</div>
						{% endif %}

					</div>
				</div>
			</div>

			{# <h5><a href="https://open.spotify.com/user/jacksutherl/playlist/5nb0dSo3jylpT5r7v9m1C1?si=eaAwGGeZTvmgj1UpjyEAVQ" target="_blank">Spotify Playlist <i class="fas fa-volume-down"></i></a></h5> #}

			<div id="songs" >

				<h2>{{ entry.coversTitle }}</h2>
				{% if entry.coversText %}
					<p>{{ entry.coversText }}</p>
				{% endif %}

				{% if setlist90s.count() > 0 %}
					<h5>{{ setlist90s.one().title }}</h5>
					<div class="row">
						{% for song in setlist90s.one().children.all() %}
							<div class="col-sm-6 col-md-4 col-lg-3">
								<div class="cover-block">
									{% if song.songImage.count %}
										<div class="cover-block-image" style="background-image:url({{ song.songImage.one().url('songImage')  }})"></div>
									{% endif %}
									<div class="cover-block-content">
										<div class="cover-block-inner-content">
											{{ song.title }} 
											<br />
											<i>{{ song.songArtist }}</i>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}

				{% if setlist80s.count() > 0 %}
					<h5>{{ setlist80s.one().title }}</h5>
					<div class="row">
						{% for song in setlist80s.one().children.all() %}
							<div class="col-sm-6 col-md-4 col-lg-3">
								<div class="cover-block">
									{% if song.songImage.count %}
										<div class="cover-block-image" style="background-image:url({{ song.songImage.one().url('songImage')  }})"></div>
									{% endif %}
									<div class="cover-block-content">
										<div class="cover-block-inner-content">
											{{ song.title }} 
											<br />
											<i>{{ song.songArtist }}</i>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}

			</div>

			
		</div>
	</div>
	

{% endblock %}